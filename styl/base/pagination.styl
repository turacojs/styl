.pagination
    li
        font-size 1.2rem
        float left
        width 2rem
        height 2rem
        margin 0 .5rem
        border-radius 2px
        text-align center

        a
            color #444

        &.active a
            color #fff

        &.active
            background-color $primary-color

        &.disabled a
            color #999
