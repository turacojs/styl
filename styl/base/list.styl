.list
    margin $default-topBottom-margin 0 1rem
    border $list-border
    border-radius $list-border-radius if $list-border-radius

    &:first-child
        margin-top 0

    > *
        margin 0
        padding .4rem .8rem
        color $list-item-color
        background $list-item-background
        border-bottom $list-border

        &:last-child
            border-bottom none

.list.simple
    padding-left .8rem
    border none
    border-radius 0
    list-style disc
    > *
        padding 0
        border none

    &.ordered
        list-style decimal


.list.links, .list-links
    > *
        padding 0
        > a
            display block
            padding $interaction-topBottom-padding $interaction-leftRight-padding
            text-decoration none

.list.buttons
    border none
    > *
        border none

.list .list
    border-left none
    border-right none
    margin 0 0 0 5px

.list.vertical, .list-vertical
    display inline-block
    margin-bottom $default-topBottom-margin
    > *
        display inline-block
        border-right $list-border

        &:last-child
            border-right none
