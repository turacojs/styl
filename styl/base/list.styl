.list
    margin $default-top-bottom-margin 0 1rem
    border $list-border
    border-radius $list-border-radius if $list-border-radius

    &:first-child
        margin-top 0

    > *
        margin 0
        padding .4rem .8rem
        background #fff
        border-bottom 1px solid #e0e0e0

        &:last-child
            border-bottom none

.list.simple
    padding-left 35px
    border none
    border-radius 0
    list-style disc
    > *
        padding 0
        border none

    &.ordered
        list-style decimal


.list.links
    > *
        padding 0
        > a
            display block
            padding $interaction-topBottom-padding $interaction-leftRight-padding
            text-decoration none

.list .list
    border-left none
    border-right none
    margin 0 0 0 5px
