thin()
    font-weight 200
light()
    font-weight 300
regular()
    font-weight 400
medium()
    font-weight 500
bold()
    font-weight 700


.page-title, .text-headline, .text-title, .text-subhead
    regular()
    line-height 1.2
    margin 8px 0
    margin $title-top-margin 0 $default-top-bottom-margin

.page-title:first-child, .text-title:first-child
    margin-top 0

.page-title
    regular()
    font-size $page-title-fontsize
    color $page-title-color if $page-title-color

.text-headline
    regular()
    font-size $text-headline-fontsize

.text-title
    medium()
    font-size $text-title-fontsize

.text-subhead
    regular()
    font-size $text-subhead-fontsize
    margin-top $default-top-bottom-margin

.text-paragraph-title
    medium()
    font-size $text-paragraph-title-fontsize

text-button()
    medium()
    text-transform uppercase

.text-button
    text-button()

.text-caption
    regular()
    font-size 0.8em
