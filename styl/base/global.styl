*
    box-sizing border-box

z-depth-1()
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)

z-depth-1-half()
    box-shadow 0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15)

z-depth-1()
    box-shadow 0 2px 3px 0 rgba(0, 0, 0, 0.15), 0 2px 5px 0 rgba(0, 0, 0, 0.2)

z-depth-1-hover()
    box-shadow 0 4px 6px 0 rgba(0, 0, 0, 0.2), 0 3px 7px 0 rgba(0, 0, 0, 0.25)


.hide
    display none !important

// Text Align
.align-left
    text-align left

.align-right
    text-align right

.center, .align-center
    text-align center

.float-left
    float left !important

.float-right
    float right !important

// No Text Select
.no-select
    user-select none

// Circle
.circle
    border-radius 50%

.center-block
    display block
    margin-left auto
    margin-right auto

.ellipsis
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

.no-padding
    padding 0 !important

// Dividers

.divider
    height 1px
    overflow hidden
    background-color $divider-color

textarea, table, td, th, code, pre, samp, div, p, ul
    word-wrap break-word
    hyphens auto


article
    p
        text-align justify

p
    margin $default-top-bottom-margin 0
    font-size 1.05em
    line-height 1.6
