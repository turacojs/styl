code, kbd, pre, samp
    font-family $font-monospace

code
    padding 1px .4rem
    color $code-color
    background $code-background
    border-radius $code-border-radius if $code-border-radius


// User input typically entered via keyboard
kbd
    padding 1px .4rem
    color $kbd-color
    background $kbd-background
    border-radius $kbd-border-radius if $kbd-border-radius
    box-shadow inset 0 -1px 0 rgba(0,0,0,.25)

// Blocks of code
pre
    margin 1rem 0
    padding 6px 10px
    color $pre-color
    background $pre-background
    border-left 6px solid $blockquote-border-color
    word-break break-all
    word-wrap break-word
    overflow auto
    tab-size 4

    code
        padding 0
        white-space pre-wrap
        border-radius 0
        background inherit
        color inherit
