if $table-layout
    .page-container
        display table
        height 100%
        width 100%

    .page-header, .page-footer
        display table-row
        height 1px

    .page-main
        display table
        height 100%
        width 100%


.page-footer
    .footer-copyright
        overflow hidden
        color rgba(255, 255, 255, .8)
        background-color rgba(51, 51, 51, .08)
        light()

.container-fluid
    margin-right auto
    margin-left auto
    padding-left $container-padding-side
    padding-right $container-padding-side

.container-fixed
    @extend .container-fluid

    @media $small-and-up
        width $small-screen

    @media $medium-and-up
        width $medium-screen

    @media $large-and-up
        width $large-screen

