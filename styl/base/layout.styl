$table-layout ?= false

if $table-layout
    .page-container
        display table
        height 100%
        width 100%

    .page-header, .page-footer
        display table-row
        height 1px

    .page-main
        display table
        height 100%
        width 100%


.page-footer
    padding-top 20px
    background-color $footer-bg-color

    .footer-copyright
        overflow hidden
        color rgba(255, 255, 255, .8)
        background-color rgba(51, 51, 51, .08)
        @extend .light
