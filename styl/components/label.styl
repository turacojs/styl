.label
    bold()
    display inline-block
    padding .1em .4rem
    font-size 80%
    font-size .8em
    line-height inherit
    text-align center
    white-space nowrap
    vertical-align baseline
    background $primary-color
    $label-color = find-best-fg-color($primary-color, 70%)
    color $label-color

    &.success
        background $valid-color
        color find-best-fg-color($valid-color, 70%) if find-best-fg-color($valid-color, 70%) != $label-color

    &.error
        background $invalid-color
        color find-best-fg-color($invalid-color, 70%) if find-best-fg-color($invalid-color, 70%) != $label-color

    &.warning
        background $warning-color
        color find-best-fg-color($warning-color, 70%) if find-best-fg-color($warning-color, 70%) != $label-color

