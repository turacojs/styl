.label
    bold()
    display inline-block
    padding .1em .4rem
    font-size 80%
    font-size .8em
    line-height inherit
    text-align center
    white-space nowrap
    vertical-align baseline
    background $primary-color
    color find-best-fg-color($primary-color)

    &.success
        background $valid-color

    &.error
        background $invalid-color

    &.warning
        background $warning-color

