<script>
function updateInputClasses(input) {
    var value = input.value;
    if (value) {
        input.classList.add('has-value');
        input.classList.remove('has-empty-value');
    } else {
        input.classList.add('has-empty-value');
    }
}
</script>

<h1 class="page-title">Forms</h1>

<h2 class="text-title">Input text</h2>

<a href="http://www.google.com/design/spec/components/text-fields.html">Material Design documentation on text fields</a>

<h3 class="text-title">Single-line text field</h3>

<div class="row space-around">
    <div class="col wp-45">
        <div class="input text">
            <input name="user[firstname]" required="required" id="user-firstname" onkeyup="updateInputClasses(this)">
            <label for="user-firstname">First Name</label>
        </div>
    </div>
    <div class="col wp-45">
        <div class="input text">
            <input name="user[lastname]" required="required" id="user-lastname" onkeyup="updateInputClasses(this)">
            <label for="user-lastname">Last Name</label>
        </div>
    </div>
    <div class="col wp-45">
        <div class="input text email">
            <input name="user[email]" type="email" placeholder="Email (Placeholder)" required="required" id="user-email" onkeyup="updateInputClasses(this)">
        </div>
    </div>
    <div class="col wp-45">
        <div class="input text with-icon">
            <input name="user[phone]" required="required" id="user-phone" onkeyup="updateInputClasses(this)">
            <label for="user-phone">Phone</label>
            <label class="input-icon" for="user-phone">‚òè</label>
        </div>
    </div>
</div>

<div class="input text">
    <input name="user[disabled]" disabled="disabled" id="user-lastname">
    <label for="user-disabled">Disabled</label>
</div>


<h3 class="text-title">Textarea</h3>

<div class="input text textarea">
    <textarea name="user[bio]" placeholder="Type anything you like here" id="user-bio" onkeyup="updateInputClasses(this)"></textarea>
</div>

